{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "lib/esm",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "utils"]
}
